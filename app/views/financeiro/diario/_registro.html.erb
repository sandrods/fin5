<tr>
  <td class="date">
    <%= link_to registro.data, edit_registro_path(registro), data: { behavior: 'load-modal', modal_size: 'lg' } %>
  </td>
  <td class='text-right <%= registro.cd %>'  style="width: 7rem;" ><%= curr(registro.valor_cd) %></td>
  <td class='check'>
    <%= registro_pg(registro) %>
  </td>
  <td class="text-muted">
    <%= registro.descricao %>
    <% if registro.transferencia? %>
      <small class="sub1 d-inline-block ml-3">
        <%= icon(:exchange_alt, registro.transferencia&.conta&.nome) %>
      </small>
    <% end %>
  </td>
</tr>
