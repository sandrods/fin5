
  <div class="card mb-4">
    <div class="card-header alert-info">
      <b><%= conta.nome %></b>
    </div>
    <div class="card-footer upper text-right">
      <small>Saldo Inicial</small> &nbsp; <%= curr conta.saldo_inicial %>
    </div>
    <table class="table table-striped m-0">
      <tbody id="registros_conta_caixa">
        <%= render partial: 'registros/registro', collection: conta.registros %>
      </tbody>
    </table>
    <div class="card-footer text-right">
      <small>Saldo Final</small> &nbsp; <%= curr conta.saldo_do_mes %>
    </div>
  </div>
